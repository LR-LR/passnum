1- CREATE DATABASE Centrale_Marseille
2- CREATE TABLE Ecole (id_ecole INT(10) PRIMARY KEY, nom_ecole VARCHAR(30) UNIQUE, directeur VARCHAR(30));
3- INSERT INTO ecole(id_ecole, nom_ecole, directeur) VALUE (1, “passerelle numérique“,  “ frédéric ”);
4- CREATE TABLE service (id_ecole INT(10), id_service INT(10) PRIMARY KEY, nom_service VARCHAR(30) UNIQUE); 
5- INSERT INTO service(id_ecole, id_services, nom_service) VALUE (1,1, “informatique“), (1, 2, “enseignement“), (1, 3, “scolarité“), (1, 4, “gestion“), (1, 5, “direction“), (1,6, “RH“), (1, 7  “relation entreprise“), (1, 8, “recherche“);
6- CREATE TABLE Batiment (id_ecole INT(10), id_batiment INT(10) PRIMARY KEY, nom_batiment VARCHAR(30));
7- INSERT INTO batiment(id_ecole, id_batiment, nom_batiment) VALUE (1,1, “Pythagore“), (1,     2, “Euclide“), (1, 3, “Archimène“), (1, 4, “Copernic“), (1, 5, “Galile“), (1,6, “Kepler“) (1, 7, “Descartes“), (1, 8, “Torriceli“), (1, 9, “Newton“) (1, 10, Laplace) ;
8- CREATE TABLE Salle (id_batiment INT(10), id_salle INT(10) PRIMARY KEY, num_salle VARCHAR(30), capacite_salle INT(4), possede_tableaux INT(1) BOOLEAN, possede_retro INT(1) BOOLEAN);
9- LOAD DATA INFILE “/desktop/salle.txt“ ,
    INTO TABLE salle,
    LINES TERMINATED BY ‘\n’,
    ESCAPE BY ‘ “ ’,
    IGNORE 1 LINES ;
10- CREATE TABLE promo (id_promo INT(10) PRIMARY KEY, id_ecole VARCHAR(10), id_responsable INT(10), annee INT(4), specialite VARCHAR(50) nom_service VARCHAR(50));
11- LOAD DATA INFILE “/desktop/promo.txt“, 
    INTO TABLE promo,
    LINES TERMINATED BY ‘\n’,
    ESCAPE BY ‘ “ ’,
    IGNORE 1 LINES ;
12- CREATE TABLE Personnel(id_personnel INT(10), PRIMARY KEY, id_responsable INT(10), nom VARCHAR(250), prenom VARCHAR(250), id_secu INT(20), status SET("vocataire","Interne","Prestataire"), num_banque VARCHAR(50), date_entree DATE, date_sortie DATE);
13- LOAD DATA INFILE “/desktop/personnel.txt,
    INTO TABLE personnel,
    LINES TERMINATED BY ‘\n’,
    ESCAPE BY ‘ “ ’,
    IGNORE 1 LINES ;
14- CREATE TABLE Etudiant(id_etudiant INT(10) PRIMERY KEY, id_promo INT(10), nom VARCHAR(250), prenom VARCHAR(250), id_secu INT(20), num_banque VARCHAR(50));
15- LOAD DATA INFILE “/desktop/etudiant.txt,
    INTO TABLE etudiant,
    LINES TERMINATED BY ‘\n’,
    ESCAPE BY ‘ “ ’,
    IGNORE 1 LINES ;
16- SELECT COUNT (id_etudiant) FROM Etudiant;
17- SELECT AVG (age) FROM Etudiant;
18- SELECT * FROM Etudiant,Promo.id_promo AND annee = 2017 AND specialite = passnum;
19- SELECT COUNT (id_etudiant) FROM Etudiant, Promo WHERE Etudiant.id_promo = Promo.id_promo AND annee = 2017 ;
20- SELECT COUNT (id_etudiant) FROM Etudiant, Promo WHERE Etudiant.id_promo = Promo.id_promo AND annee = 2016 ;
21- SELECT COUNT (id_etudiant) FROM Etudiant, Promo WHERE Etudiant.id_promo = Promo.id_promo AND annee = 2015 ;
21- SELECT COUNT (id_etudiant) FROM Etudiant, Promo WHERE Etudiant.id_promo = Promo.id_promo AND annee = 2015 ;
22- CREATE TABLE Service_has_user(id_personnel INT(10), id_service INT(10), role VARCHAR(30);
23- LOAD DATA LOCAL INFILE 'passnum/4/service_has_user.txt' INTO TABLE Service_has_user
  [FIELDS
    [TERMINATED BY '\t'];
  ]
  [LINES
    [TERMINATED BY '\n'];
  ]
  [IGNORE 1 LINES];

24-Select nom, prenom, service from Personnel, Service_has_user, Service where Service.id_service = Service_has_user.id_service AND Service_has_user.id_personnel = Personel.id_personnel AND nom_service = 'Informatique';

25-SELECT COUNT(id_personnel) from Service_has_user, Service where Service_has_user.id_service = 2 AND Service_has_user.id_service = Service.id_service;

26-SELECT nom, prenom FROM Personnel, Service_has_user WHERE role = 'Professeur Mathematiques' AND Personnel.id_personnel = Service_has_user.id_personnel;
